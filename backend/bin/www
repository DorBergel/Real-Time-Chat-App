#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require("../app");
var debug = require("debug")("backend:server");
var http = require("http");
var socketIo = require("socket.io");
const { initializeChatWebSocket } = require("../sockets/chatSocket");

console.log("ğŸš€ Starting server initialization...");
console.log("ğŸ“Š Environment variables:");
console.log(`  - NODE_ENV: ${process.env.NODE_ENV || "development"}`);
console.log(`  - PORT: ${process.env.PORT || "not set"}`);
console.log(`  - FRONTEND_URL: ${process.env.FRONTEND_URL || "not set"}`);

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || "3025");
app.set("port", port);

console.log(`ğŸ”§ Normalized port: ${port}`);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);
console.log("ğŸ“¡ HTTP server created");

/**
 * Initialize WebSocket
 */

try {
  initializeChatWebSocket(server);
  console.log("ğŸ’¬ Chat WebSocket initialized successfully");
} catch (error) {
  console.error("âŒ Error initializing WebSocket:", error.message);
}

/**
 * Listen on provided port, on all network interfaces.
 */

console.log(`ğŸ¯ Attempting to start server on port ${port}...`);
server.listen(port);
server.on("error", onError);
server.on("listening", () => onListening("API & WebSocket", port));

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  console.log(`ğŸ”„ Normalizing port value: ${val}`);
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    console.log("ğŸ“ Using named pipe:", val);
    return val;
  }

  if (port >= 0) {
    console.log("ğŸ”¢ Using port number:", port);
    return port;
  }

  console.log("âš ï¸  Invalid port value, returning false");
  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  console.error("âŒ Server error occurred:", error);

  if (error.syscall !== "listen") {
    throw error;
  }

  var bind = typeof port === "string" ? "Pipe " + port : "Port " + port;

  console.error(`ğŸš¨ Error binding to ${bind}`);

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case "EACCES":
      console.error(`ğŸ” ${bind} requires elevated privileges`);
      process.exit(1);
      break;
    case "EADDRINUSE":
      console.error(`ğŸ”’ ${bind} is already in use`);
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening(serverType, port) {
  var addr = server.address();
  var bind = typeof addr === "string" ? "pipe " + addr : "port " + addr.port;

  console.log(`âœ… ${serverType} server listening on ${bind}`);
  console.log(`ğŸŒ Server ready at: http://localhost:${addr.port}`);
  debug(`${serverType} server listening on ${bind}`);
}
